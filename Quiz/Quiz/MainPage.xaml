<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.MainPage">

    <StackLayout Spacing="20" Padding="15">
        <Entry x:Name="userNameEntry" Placeholder="Wpisz swój nick" />
        <Button x:Name="startButton" Text="Rozpocznij quiz" Clicked="StartQuiz" />
        <Label x:Name="questionLabel" Text="Pytanie pojawi się tutaj" IsVisible="False" />
        <Entry x:Name="answerEntry" Placeholder="Twoja odpowiedź" IsVisible="False" />
        <Button x:Name="submitAnswerButton" Text="Zatwierdź odpowiedź" Clicked="SubmitAnswer" IsVisible="False" />
        <Label x:Name="feedbackLabel" Text="" IsVisible="False" />
    </StackLayout>



</ContentPage>
